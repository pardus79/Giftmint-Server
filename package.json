{
  "name": "giftmint-server",
  "version": "1.0.0",
  "description": "Private e-cash server system using elliptic curve-based blind signatures",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "test:api": "jest test/api",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run"
  },
  "keywords": [
    "e-cash",
    "blind-signature",
    "tokens",
    "crypto"
  ],
  "author": "",
  "license": "Unlicense",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cbor": "^9.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "knex": "^3.0.1",
    "morgan": "^1.10.0",
    "secp256k1": "^5.0.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "setupFilesAfterEnv": ["./test/jest.setup.js"],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/test/**",
      "!**/coverage/**"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}